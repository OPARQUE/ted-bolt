<!DOCTYPE html>
{% setcontent config = 'config/geral' %}
<html lang="en">
    <head>
        
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="{% if record.corpo is not empty %}{{ record.corpo|striptags|excerpt }}{% elseif record.corpo_coluna_1 is not empty %}{{ record.corpo_coluna_1|striptags|excerpt }}{% else %}{{ app.config.get('general/payoff')|striptags }}{% endif %}"/>
        <title>{% if record.titulo is defined %}{{ record.titulo|striptags }} | {% endif %}{{ app.config.get('general/sitename')|striptags }} {% if record.titulo is not defined and app.config.get('general/payoff') %} | {{ app.config.get('general/payoff')|striptags }}{% endif %}</title>

        <meta property="og:locale" content="{{ app.config.get('general/locale')|striptags }}" />
        <meta property="og:title" content="{% if record.titulo is defined %}{{ record.titulo|striptags }} | {% endif %}{{ app.config.get('general/sitename')|striptags }} {% if record.titulo is not defined and app.config.get('general/payoff') %} | {{ app.config.get('general/payoff')|striptags }}{% endif %}" />
        <meta property="og:description" content="{% if record.corpo is not empty %}{{ record.corpo|striptags|excerpt }}{% elseif record.corpo_coluna_1 is not empty %}{{ record.corpo_coluna_1|striptags|excerpt }}{% else %}{{ app.config.get('general/payoff')|striptags }}{% endif %}" />
        <meta property="og:url" content="{{ paths.currenturl }}" />
        <meta property="og:site_name" content="{{ app.config.get('general/sitename')|striptags }}" />
        <meta property="article:published_time" content="{{ record.datepublish }}" />
        <meta property="og:image" content="{% if record.imagem is not empty %}{{ paths.hosturl ~ image(record.imagem) }}{% else %}{{ paths.hosturl ~ image(config.logo) }}{% endif %}" />
        
        <!-- Bootstrap -->
        <link href="{{paths.theme}}assets/css/bootstrap/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="{{paths.theme}}assets/js/slick/slick.css">
        <link rel="stylesheet" href="{{paths.theme}}assets/js/slick/slick-theme.css">
        <link href="{{paths.theme}}assets/css/main.css" rel="stylesheet">

        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
          <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>
    <body>
        <div class="topo">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12">
                        <a href="{{paths.rooturl}}">
                            <img src="{{image(config.logo)}}" class="img-responsive" />
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="babado-topo"></div>
        <div class="barra-menu-topo">
            <div class="container">
                <div class="row">
                    <div class="col-md-3 col-xs-12">
                        <div class="input-ted">
                            <form action="{{paths.rooturl}}search">
                                <input type="text" placeholder="buscar..." name="q" value="{{search}}">
                                <span class="fa fa-search icon-busca"></span>
                            </form>
                        </div><!-- /input-group -->
                    </div>
                    <div class="col-md-9 col-xs-12">
                        {{ menu('main', 'partials/_menu.twig') }}
                    </div>
                </div>
            </div>
        </div>

        <div class="conteudo">